<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Fila de Atendimento</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/style.css">
</head>
<body class="container py-5">
  <% layout('layout') %>
  <h1 class="mb-4">Fila de Atendimento</h1>
  <% if (agendamentos.length === 0) { %>
    <p class="text-muted">Nenhum agendamento encontrado.</p>
  <% } else { %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Advogado</th>
          <th>Data</th>
          <th>Hora</th>
          <th>Recorrente</th>
        </tr>
      </thead>
      <tbody>
        <% agendamentos.forEach(item => { %>
          <tr>
            <td><%= item.nome %></td>
            <td><%= item.advogado %></td>
            <td><%= item.data %></td>
            <td><%= item.hora %></td>
            <td><%= item.recorrente ? 'Sim' : 'NÃ£o' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
  <a href="/" class="btn btn-secondary">Voltar</a>
</body>
</html>
